<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Verify"
    android:orientation="vertical"
    android:gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rondbg"
        android:layout_margin="10sp"
        android:paddingBottom="10sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/textView"
                android:layout_marginTop="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/faster_one"
                android:letterSpacing="0.3"
                android:text="BDM"
                android:textColor="#000000"
                android:textSize="45sp"
                android:textStyle="italic"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-4dp"
                android:fontFamily="@font/akaya_telivigala"
                android:letterSpacing="0.2"
                android:text="Bidco Driver Monitor"
                android:textColor="#facb02"
                android:textSize="25sp"
                android:textStyle="bold|italic"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.521"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signTxt">
            <TextView
                android:id="@+id/signTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Verify your identity"
                android:layout_marginBottom="10sp"
                android:textColor="#555"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <com.google.android.material.textfield.TextInputLayout

                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Email Address"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="229dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/dEmail"
                    android:layout_width="340dp"
                    android:layout_height="54dp"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/black"
                    android:background="@drawable/rond"
                    android:drawableStart="@drawable/email"
                    android:drawableTint="#facb02"
                    tools:layout_editor_absoluteX="25dp"
                    tools:layout_editor_absoluteY="222dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout

                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:hint="Driver ID"
                app:passwordToggleEnabled="true"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="303dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/dPW"
                    android:layout_width="340dp"
                    android:layout_height="54dp"
                    android:background="@drawable/rond"
                    android:drawableStart="@drawable/pin"
                    android:drawableTint="#facb02"
                    android:textColor="@color/black"
                    android:inputType="textPassword"
                    tools:layout_editor_absoluteX="25dp"
                    tools:layout_editor_absoluteY="296dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:layout_width="331dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25sp"
                android:onClick="dVerify"
                android:text="Verify" />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>