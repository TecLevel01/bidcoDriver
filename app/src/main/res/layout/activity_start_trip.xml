<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Verify"
    android:background="#f2f2f2"
    android:backgroundTintMode="src_atop"
    android:orientation="vertical"
    android:gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/rond"
        android:layout_margin="10sp"
        android:paddingBottom="10sp"
        android:minWidth="500dp"
        android:paddingHorizontal="20sp"
        android:paddingVertical="30dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:src="@drawable/chield_check"
            app:tint="#FB8C00" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Ongoing Trip"
            android:textColor="#FB8C00"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="15sp"
            android:textColor="#FFB300"
            android:textSize="12sp"
            android:text="Click the reached button when your trip is completed"
            tools:ignore="SmallSp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/reachedBtn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Reached"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>